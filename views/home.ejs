	<!-- SHOWCASE
		================================================== -->
		<div class="row space-top">
			<div class="c12 space-top">
				<h1 class="maintitle ">
					<span>REPORTED FOUND PEOPLE</span>
				</h1>
			</div>
		</div>
		<div class="row space-bot">
			<div class="c12">
				<div class="list_carousel">
					<div class="carousel_nav">
						<a class="prev" id="car_prev" href="#"><span>prev</span></a>
						<a class="next" id="car_next" href="#"><span>next</span></a>
					</div>
					<div class="clearfix">
					</div>
					<ul id="recent-projects">
						<!--featured-projects 1-->
						<%people.forEach(x => { %>
						<li>
							<div class="featured-projects">
								<div class="featured-projects-image">
									<% if(x.found_photo==""){ %>
									<a href="#"><img src="http://placehold.it/275x180" class="imgOpa" alt=""></a>
									<% }else{ %>
									<a href="#"><img src="<%=x.found_photo %>" class="imgOpa" alt=""></a>
									<% } %>
								</div>
								<div class="featured-projects-content">
									<h1><a href="#"><%=x.found_name %></a></h1>
									<p>
										<%=x.found_address %> <%=x.found_city %> <%=x.found_state %>
									</p>
								</div>
							</div>
						</li>
						<!--featured-projects 2-->
						<% }) %>
					</ul>
					<div class="clearfix">
					</div>
				</div>
			</div>
